@model AustraliaSays2_Models.DTO.SiteDTO

@{
    ViewData["Title"] = "Update";
}

<h1 class="p-2 m-4">Update Site Details</h1>
<div>
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <div class="row form-group p-2 m-2">
            <div class="col-3">
                <label asp-for="Id" class="text-primary"></label>
            </div>
            <div class="col-6 text-dark">
                <input asp-for="Id" class="form-control" readonly="readonly" />
            </div>
        </div>

        <div class="row form-group p-2 m-2">
            <div class="col-3">
                <label asp-for="Name" class="text-primary"></label>
            </div>
            <div class="col-6 text-dark">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>

        <div class="row form-group p-2 m-2">
            <div class="col-3">
                <label asp-for="CountryId" class="text-primary"></label>
            </div>
            <div class="col-6 text-dark">
                <select asp-for="CountryId" asp-items="@(ViewBag.Countries ?? new List<SelectListItem>())" class="form-control">
                    <option value="">-- Select Country --</option>
                </select>
            </div>
        </div>
        <div class="row form-group p-2 m-2">
            <div class="col-3">
                <label asp-for="URL" class="text-primary"></label>
            </div>
            <div class="col-6 text-dark">
                <input asp-for="URL" class="form-control" />
            </div>
        </div>

        <div class="row form-group p-2 m-2">
            <div class="col-3">
                <label asp-for="Logo" class="text-primary"></label>
            </div>
            <div class="col-6 text-dark">
                @if (!string.IsNullOrEmpty(Model.LogoPath))
                {
                    <img src="@Model.LogoPath" alt="Site Logo" class="img-thumbnail" style="max-width: 150px;" />
                }
                <input asp-for="Logo" type="file" class="form-control" />
            </div>
        </div>

        <div class="row form-group p-2 m-2">
            <div class="col-3">
                <label asp-for="SiteTypeId" class="text-primary"></label>
            </div>
            <div class="col-6 text-dark">
                <select asp-for="SiteTypeId" asp-items="@(ViewBag.SiteTypes ?? new List<SelectListItem>())" class="form-control">
                    <option value="">-- Select Site Type --</option>
                </select>
            </div>
        </div>

        <div class="row p-2 m-2">
            <div class="col-3">
                <button type="submit" class="btn btn-outline-info form-control">
                    <i class="fas fa-save"></i>&nbsp; Update
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-outline-danger form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>
