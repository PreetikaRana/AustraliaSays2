@model AustraliaSays2_Models.DTO.ArticleTypeDTO

<h1>@ViewData["Title"]</h1>
<div class="container">
    <form method="post">
        <div class="row">
            <div class="col-8 border-bottom">
                <h2 class="text-primary"><u>Add ArticleType</u></h2>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-8">
                <div class="form-group row  m-5">
                    <div class="col-4 p-2">
                        <label asp-for="Type"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Type" class="form-control shadow" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-outline-dark form-control">
                            Save
                        </button>
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-outline-danger form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
