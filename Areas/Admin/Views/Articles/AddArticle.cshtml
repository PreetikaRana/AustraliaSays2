@{
    ViewData["Title"] = "AddArticle";
}

<div class="row">
    <div class="col-9">
        <h1 class="text-center"><u>Article List</u> </h1>
    </div>
    <div>
        <a asp-action="Upsert" class="btn btn-outline-info"><i class="fas fa-plus"></i> &nbsp; Add New Article</a>
    </div>

</div>

