    <table id="tblData" class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>ArticleName</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section scripts{
    <script src="~/js/article.js"></script>
}