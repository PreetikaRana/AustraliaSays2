@{
    ViewData["Title"] = "Home Page";
}

<div class="container-xxl d-flex align-items-center justify-content-center ">
    <main role="main" class="pb-3">
        <div class="row justify-content-center">
            <div class="col-auto p-4">
                <div class="card" style="width: 30rem;">
                    <img src="~/lib/images/agriculture.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Agriculture</h5>
                        <p class="card-text">let's Learn about some new agriculture techniques</p>
                        <a href="#" class="btn btn-primary">Agriculture World</a>
                    </div>
                </div>
            </div>
            <div class="col-auto p-4">
                <div class="card" style="width: 30rem;">
                    <img src="~/lib/images/sports.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Sports</h5>
                        <p class="card-text">Do You Know the New Captain of Indian Cricket Team?</p>
                        <a href="#" class="btn btn-primary">Sports World</a>
                    </div>
                </div>
            </div>
            <div class="col-auto p-4">
                <div class="card" style="width: 30rem;">
                    <img src="~/lib/images/politics.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Politics</h5>
                        <p class="card-text">What are the new Changes of our Constiturion in 2025.</p>
                        <a href="#" class="btn btn-primary">Politics World</a>
                    </div>
                </div>
            </div>

        </div>
        <div class="row justify-content-center">
            <div class="col-auto p-4">
                <div class="card" style="width: 30rem;">
                    <img src="~/lib/images/education.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Education</h5>
                        <p class="card-text">Aayan Sharma Got 499/500 in his 10th CBSE Board</p>
                        <a href="#" class="btn btn-primary">Education World</a>
                    </div>
                </div>
            </div>
            <div class="col-auto p-4">
                <div class="card" style="width: 30rem;">
                    <img src="~/lib/images/movie.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Movies</h5>
                        <p class="card-text">Found Out the Releasing Date of How To Train Your Dragon</p>
                        <a href="#" class="btn btn-primary">Movies World</a>
                    </div>
                </div>
            </div>
            <div class="col-auto p-4">
                <div class="card" style="width: 30rem;">
                    <img src="~/lib/images/technology.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Technology</h5>
                        <p class="card-text">Is SpaceX going to Release GitHub 2.0</p>
                        <a href="#" class="btn btn-primary">Technology World</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

@section scripts
{
    <script src="~/css/homepage.css"></script>
    <script src="~/js/homepage.js"></script>
}